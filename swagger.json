{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "FlatWhiteUni Server REST API",
    "description": "FlatWhiteUni Project Server",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8081",
  "basePath": "/api",
  "tags": [
    {
      "name": "FlatWhiteUni",
      "description": "API for FlatWhiteUni server in the system"
    }
  ],
  "schemes": [
    "http"
